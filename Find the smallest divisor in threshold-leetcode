#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int smallestDivisor(vector<int>& nums, int limit) {
        int low = 1;
        int high = *max_element(nums.begin(), nums.end());
        int ans = high;

        while (low <= high) {
            int mid = low + (high - low) / 2;
            long long sum = 0;

            for (int x : nums) {
                sum += (x + mid - 1) / mid;  // ceil(x / mid)
            }

            if (sum <= limit) {
                ans = mid;
                high = mid - 1;   // try smaller divisor
            } else {
                low = mid + 1;    // need bigger divisor
            }
        }

        return ans;
    }
};
